{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "/configs/**",
        "headers": [
          { "key": "Access-Control-Allow-Origin",  "value": "*" },
          { "key": "Access-Control-Allow-Methods", "value": "GET, HEAD, OPTIONS" },
          { "key": "Access-Control-Allow-Headers", "value": "Origin, X-Requested-With, Content-Type, Accept, Range, Cache-Control, Pragma, If-Modified-Since" },
          { "key": "Access-Control-Expose-Headers","value": "Accept-Ranges, Content-Length, Content-Range" },
          { "key": "Cache-Control",                "value": "no-store" }
        ]
      },
      {
        "source": "/audio/**",
        "headers": [
          { "key": "Access-Control-Allow-Origin",  "value": "*" },
          { "key": "Access-Control-Allow-Methods", "value": "GET, HEAD, OPTIONS" },
          { "key": "Access-Control-Allow-Headers", "value": "Origin, X-Requested-With, Content-Type, Accept, Range, Cache-Control, Pragma, If-Modified-Since" },
          { "key": "Access-Control-Expose-Headers","value": "Accept-Ranges, Content-Length, Content-Range" },
          { "key": "Cache-Control",                "value": "public, max-age=60" }
        ]
      }
    ]
  }
}
