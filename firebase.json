{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/configs/Config.json",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, max-age=0" },
          { "key": "Pragma", "value": "no-cache" },
          { "key": "Access-Control-Allow-Origin", "value": "*" }
        ]
      },
      {
        "source": "/audio/**",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=60" },
          { "key": "Access-Control-Allow-Origin", "value": "*" }
        ]
      }
    ]
  }
}
