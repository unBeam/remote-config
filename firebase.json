{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "headers": [
      {
        "source": "/localization/**",
        "headers": [
          { "key": "Access-Control-Allow-Origin",  "value": "*" },
          { "key": "Access-Control-Allow-Methods", "value": "GET, HEAD, OPTIONS" },
          { "key": "Access-Control-Allow-Headers", "value": "Origin, X-Requested-With, Content-Type, Accept, Range, Cache-Control, Pragma, If-Modified-Since" },
          { "key": "Access-Control-Expose-Headers","value": "Accept-Ranges, Content-Length, Content-Range" },
          { "key": "Cross-Origin-Resource-Policy","value": "cross-origin" },
          { "key": "Timing-Allow-Origin",          "value": "*" },
          { "key": "Cache-Control",                "value": "public, max-age=60" }
        ]
      },
      {
        "source": "/video/**",
        "headers": [
          { "key": "Access-Control-Allow-Origin",  "value": "*" },
          { "key": "Access-Control-Allow-Methods", "value": "GET, HEAD, OPTIONS" },
          { "key": "Access-Control-Allow-Headers", "value": "Origin, X-Requested-With, Content-Type, Accept, Range, Cache-Control, Pragma, If-Modified-Since" },
          { "key": "Access-Control-Expose-Headers","value": "Accept-Ranges, Content-Length, Content-Range" },
          { "key": "Cross-Origin-Resource-Policy","value": "cross-origin" },
          { "key": "Timing-Allow-Origin",          "value": "*" },
          { "key": "Cache-Control",                "value": "public, max-age=300" }
        ]
      },
      {
        "source": "/audio/**",
        "headers": [
          { "key": "Access-Control-Allow-Origin",  "value": "*" },
          { "key": "Access-Control-Allow-Methods", "value": "GET, HEAD, OPTIONS" },
          { "key": "Access-Control-Allow-Headers", "value": "Origin, X-Requested-With, Content-Type, Accept, Range, Cache-Control, Pragma, If-Modified-Since" },
          { "key": "Access-Control-Expose-Headers","value": "Accept-Ranges, Content-Length, Content-Range" },
          { "key": "Cross-Origin-Resource-Policy","value": "cross-origin" },
          { "key": "Timing-Allow-Origin",          "value": "*" },
          { "key": "Cache-Control",                "value": "public, max-age=604800" }
        ]
      },
      {
        "source": "/fonts/**",
        "headers": [
          { "key": "Access-Control-Allow-Origin",  "value": "*" },
          { "key": "Cross-Origin-Resource-Policy","value": "cross-origin" },
          { "key": "Cache-Control",                "value": "public, max-age=604800, immutable" }
        ]
      },
      {
        "source": "/photo/**",
        "headers": [
          { "key": "Access-Control-Allow-Origin",  "value": "*" },
          { "key": "Cache-Control",                "value": "public, max-age=300" }
        ]
      }
    ]
  }
}
